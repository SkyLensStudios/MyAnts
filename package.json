{
  "name": "hyper-realistic-ant-farm-simulator",
  "version": "1.0.0",
  "description": "A scientifically accurate, single-player ant colony simulation with complex biological behaviors, realistic physics, and detailed ecosystem modeling",
  "main": "dist/electron.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run start:electron\"",
    "build": "webpack --mode production && tsc --project tsconfig.main.json",
    "build:watch": "concurrently \"webpack --mode development --watch\" \"tsc --project tsconfig.main.json --watch\"",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "webpack --mode production",
    "start:electron": "wait-on dist/index.html dist/electron.js && electron .",
    "start:web": "webpack serve --mode development",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "simulation",
    "ants",
    "biology",
    "scientific",
    "webgl",
    "typescript",
    "react"
  ],
  "author": "DarkR.Dev",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.157.0",
    "@types/three": "^0.157.0",
    "cannon-es": "^0.20.0",
    "sqlite3": "^5.1.6",
    "idb": "^7.1.1",
    "@react-three/fiber": "^8.15.11",
    "@react-three/drei": "^9.88.13",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "ts-loader": "^9.5.0",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "electron": "^27.0.2",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "prettier": "^3.1.0"
  },
  "build": {
    "appId": "com.darkrdev.antfarmsimulator",
    "productName": "Hyper-Realistic Ant Farm Simulator",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}